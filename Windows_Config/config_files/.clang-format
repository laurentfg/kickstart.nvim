BasedOnStyle: LLVM
UseTab: Never
IndentWidth: 4
ColumnLimit: 0  # Pas de limite de colonnes
IndentAccessModifiers: false
TabWidth: 4
AccessModifierOffset: -4
PointerAlignment: Left
#IndentCaseLabels: false

# Place les accolades `{` sur la ligne suivante
BreakBeforeBraces: Allman

# Garde les "if () code;" sur une seule ligne si possible
AllowShortIfStatementsOnASingleLine: true
AllowShortLoopsOnASingleLine: true

# Ã‰vite de reformater les lignes de code longues
ReflowComments: false

#enum sur une ligne
#AllowShortEnumsOnASingleLine  = true